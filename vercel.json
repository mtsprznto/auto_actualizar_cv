{
    "version": 2,
    "builds": [
        {
            "src": "api/main.py",
            "use": "@vercel/python",
            "config": {
                "maxLambdaSize": "50mb",
                "includeFiles": [
                    "models/**",
                    "routers/**",
                    "utils/**",
                    "data/**"
                ]
            }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "api/main.py"
        }
    ],
    "env": {
        "PYTHONUNBUFFERED": "1"
    }
}